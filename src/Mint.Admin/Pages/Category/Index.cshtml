@page
@model IndexModel
@{

}
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Ico</th>
                <th scope="col">Название</th>
                <th scope="col">Событие</th>
            </tr>
        </thead>
        @for (int i = 0; i < 6; i++)
        {
            <tbody>
                <tr>
                    <th scope="row">@i</th>
                    <td>test @i</td>
                    <td class="accordion accordion-flush">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" aria-controls="flush-collapse@i">
                                    test @i
                                </button>
                            </h2>
                            <div id="flush-collapse@i" class="accordion-collapse collapse">
                                <div class="accordion-body">Placeholder content for this accordion, which is intended to
                                    demonstrate the <code>.accordion-flush</code> class. This is the first item's accordion
                                    body.
                                </div>
                            </div>
                        </div>
                    </td>
                    <td>
                        <a href="edit?id=@i" class="btn btn-warning"><i class="bi bi-pencil-square"></i></a> |
                        <a href="edit?id=@i" class="btn btn-danger"><i class="bi bi-x-square"></i></a>
                    </td>
                </tr>
            </tbody>
        }
    </table>
</div>
