@page
@model IndexModel
@{
    ViewData["Title"] = "Категории";
    int i = 1;
}

<style>
    .accordion {
        background-color: transparent;
        color: #505050;
        cursor: pointer;
        padding: 10px;
        width: 100%;
        border: 1px solid #505050;
        text-align: left;
        outline: none;
        font-size: 15px;
        transition: 0.25s;
        border-radius: 10px;
    }

    .accordion:focus {
        box-shadow: 0 0 0 4px rgb(13 110 253 / 40%);
    }

    .accActive, .accordion:hover {
        background-color: var(--bs-info);
    }

     .accordion:after {
        content: "\002B";
        color: #777;
        font-weight: bold;
        float: right;
        margin-left: 5px;
    }

    .accActive:after {
        content: "\2212";
    }

    .panel {
        padding: 0 18px;
        background-color: white;
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.2s ease-out;
    }
</style>

<div class="container">
    <div class="d-flex align-items-start flex-column mb-3">
        <h3>Категории</h3>
    </div>
    <div class="d-flex align-items-end flex-column mb-3">
        <a href="/category/edit" class="btn btn-info" style="width: 200px; color: #fff;"><i class="bi bi-plus-square"></i> Добавить</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Ico</th>
                <th scope="col">Название</th>
                <th scope="col">Событие</th>
            </tr>
        </thead>
        @foreach (var category in Model.Categories)
        {
            <tbody>
                <tr>
                    <th scope="row">@(i++)</th>
                    <td>ico</td>
                    <td>
                        <button class="accordion">@category.Name</button>
                        <div class="panel">
                            @foreach (var brand in category.Brands)
                            {
                                @brand.Name @("|")
                            }
                        </div>
                    </td>
                    <td>
                        <a href="/category/edit?id=@category.Id" class="btn btn-warning"><i class="bi bi-pencil-square"></i></a> |
                        <a href="/category/edit?id=@category.Id" class="btn btn-danger"><i class="bi bi-x-square"></i></a>
                    </td>
                </tr>
            </tbody>
        }
    </table>
</div>

<script>
    var accordions = document.querySelectorAll(".accordion");
    accordions.forEach(accordion => {
        accordion.addEventListener("click", () => {
            accordion.classList.toggle("accActive");
            var panel = accordion.nextElementSibling;
            if (panel.style.maxHeight) {
                panel.style.maxHeight = null;
            } else {
                panel.style.maxHeight = panel.scrollHeight + "px";
            }
        });
    });
</script>