<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mint Админ</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Mint.Admin.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>

<body>
    <style>
        .progress-bar {
            display: none;
            width: 5%;
            position: absolute;
            top: -15px;
            height: 25px;
            left: 280px;
        }
    </style>

    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
    
    <main role="main" class="main d-flex flex-nowrap">
        <div class="d-flex flex-column flex-shrink-0 p-3 text-bg-dark" style="width: 280px;">
            <div class="d-flex justify-content-center align-items-center">
                <a href="/" class="text-white text-decoration-none">
                    <img src="~/images/logo/logo.png" alt="Mint">
                </a>
            </div>
            <hr>
            @if (Context.IsAuthenticated())
            {
                <div class="dropdown">
                    <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        @if (true)
                        {
                            <img src="https://github.com/mdo.png" alt="" width="32" height="32" class="rounded-circle me-2">
                        }
                        else
                        {
                            <i class="bi bi-person-circle me-2" style="font-size: 18px;"></i>
                        }
                        <strong style="margin-left: 20px;">@Context.GetFullName()</strong>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
                        <li><a class="dropdown-item" href="#">New project...</a></li>
                        <li><a class="dropdown-item" href="#">Settings</a></li>
                        <li><a class="dropdown-item" href="#">Profile</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item" href="#">Sign out</a></li>
                    </ul>
                </div>
                <hr>
                <ul class="nav nav-pills flex-column mb-auto">
                    <li>
                        <a href="/" class="nav-link text-white @ViewBag.Home">
                            <i class="bi bi-speedometer"></i>
                            Дашборд
                        </a>
                    </li>
                    <li>
                        <a href="/order" class="nav-link text-white @ViewBag.Order">
                            <i class="bi bi-table"></i>
                            Заказы
                        </a>
                    </li>
                    <li>
                        <a href="/product" class="nav-link text-white @ViewBag.Product">
                            <i class="bi bi-box-seam"></i>
                            Продукты
                        </a>
                    </li>
                    <li>
                        <a href="/employee" class="nav-link text-white @ViewBag.Employee">
                            <i class="bi bi-person-circle"></i>
                            Сотрудники
                        </a>
                    </li>
                    <li>
                        <a href="/category" class="nav-link text-white @ViewBag.Category">
                            <i class="bi bi-grid-1x2"></i>
                            Категории
                        </a>
                    </li>
                    <li>
                        <a href="/comments" class="nav-link text-white @ViewBag.Comments">
                            <i class="bi bi-chat-dots"></i>
                            Отзывы
                        </a>
                    </li>
                </ul>
            }
            else 
            {
                <a href="/" class="d-flex align-items-center text-white text-decoration-none">Войти</a>
            }
        </div>
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/requests.js" asp-append-version="true"></script>
    <script src="~/js/elementCreator.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>